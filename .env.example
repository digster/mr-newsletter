# Environment: development, production, test
ENVIRONMENT=development

# Debug mode
DEBUG=false

# PostgreSQL Database
DATABASE_URL=postgresql+asyncpg://newsletter:password@localhost:5432/newsletter
POSTGRES_PASSWORD=your_secure_password

# Security - Credential Encryption (CHANGE IN PRODUCTION!)
# Must be at least 16 characters. Used to encrypt OAuth credentials in the database.
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Flet UI Configuration
FLET_HOST=127.0.0.1
FLET_PORT=8550
FLET_WEB_APP=false
FLET_HOT_RELOAD=true

# Fetching Configuration
SCHEDULER_ENABLED=true
DEFAULT_FETCH_INTERVAL=1440
FETCH_QUEUE_DELAY_SECONDS=5

# Logging
LOG_LEVEL=INFO
