{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--browser", "chromium",
        "--headless"
      ],
      "env": {
        "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "0"
      }
    },
    "playwright-vnc": {
      "command": "npx",
      "args": [
        "@playwright/mcp@1.58.0",
        "--ws-endpoint", "ws://localhost:3001"
      ]
    }
  }
}
